.header
  .logo
    .text-center
      %b
        %h1 Letstars
    %i
      %span.logo-text show your talent
.col-lg-1
.col-lg-10
  .content
    .text-center
      .topic
        All contests
    %hr
    .contests
      -@contests.each do |contest|
        .contest
          .contest-title
            .topic
              =link_to (contest.title.truncate(6)), contest
            .badge
              -if (contest.contest_end.to_date-Time.now.to_date).to_i < 0
                contest closed
              -else
                =(contest.contest_end.to_date-Time.now.to_date).to_i
                days left
          .contest-image
            %hr
            =image_tag contest.image, size:"300"
          .contest-title
            =link_to "take a part",contest


