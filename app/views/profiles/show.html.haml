.header
  .header-photo
    .text-center
      %p=image_tag @profile.photo, size:'300'
      %p=@profile.name
      %p=@profile.band
      %i
        %p=@profile.role
      -if @profile.user_id == current_user.id
        =link_to 'Edit', edit_profile_path, class: 'btn btn-default', :style=>'width:100px; background-color:transparent; color:white'
      -else

.wrap
  .text-center
    %p=@profile.about
  %hr
  .text-center
    User songs:
  %br/
  -@musics.each do |music|
    %audio{:controls => ""}
      %source{:src => music.audio.url, :type => "audio/mpeg"}
    = music.audio_file_name
    %br/
  =link_to "Back", root_path